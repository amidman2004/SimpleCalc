<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ponpon"
        ></RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/krug"
            android:layout_margin="20dp"
            android:scaleType="fitXY"


            ></RelativeLayout>
        <TextView
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:id="@+id/pole"
            android:gravity="right"
            android:background="@drawable/ramka"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:textSize="40dp"
            android:textColor="#000000"
            >
        </TextView>
    <TextView
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:id="@+id/pole2"
        android:gravity="left"
        android:background="@drawable/ramka"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:textSize="40dp"
        android:textColor="#000000"
        >
    </TextView>
       <Button
           android:layout_width="70dp"
           android:layout_height="70dp"
           android:layout_below="@id/pole"
           android:layout_marginLeft="40dp"
           android:layout_marginTop="20dp"
           android:text="+"
           android:background="@drawable/ramka"
           android:textSize="60dp"
           android:gravity="center"
           android:id="@+id/plus"
           ></Button>
    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/pole"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="-"
        android:background="@drawable/ramka"
        android:textSize="60dp"
        android:gravity="center"
        android:layout_toRightOf="@id/plus"
        android:id="@+id/minus"
        ></Button>
    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/pole"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="/"
        android:background="@drawable/ramka"
        android:textSize="60dp"
        android:gravity="center"
        android:layout_toRightOf="@id/minus"
        android:id="@+id/delenie"
        ></Button>
    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/pole"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="X"
        android:background="@drawable/ramka"
        android:textSize="60dp"
        android:gravity="center"
        android:layout_toRightOf="@id/delenie"
        android:id="@+id/umnoj"
        ></Button>
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/plus"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ramka"
        android:text="1"
        android:textSize="50dp"
        android:id="@+id/odin"
        ></Button>
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/plus"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ramka"
        android:text="2"
        android:textSize="50dp"
        android:id="@+id/dva"
        android:layout_toRightOf="@id/odin"
        ></Button>
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/plus"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ramka"
        android:text="3"
        android:textSize="50dp"
        android:id="@+id/tri"
        android:layout_toRightOf="@id/dva"
        ></Button>
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/odin"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ramka"
        android:text="4"
        android:textSize="50dp"
        android:id="@+id/cheture"
        ></Button>
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/dva"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ramka"
        android:text="5"
        android:textSize="50dp"
        android:id="@+id/pat"
        android:layout_toRightOf="@id/cheture"
        ></Button>
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/tri"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ramka"
        android:text="6"
        android:textSize="50dp"
        android:id="@+id/chest"
        android:layout_toRightOf="@id/pat"
        ></Button>
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/cheture"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ramka"
        android:text="7"
        android:textSize="50dp"
        android:id="@+id/sem"

        ></Button>
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/pat"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ramka"
        android:text="8"
        android:textSize="50dp"
        android:id="@+id/vosem"
        android:layout_toRightOf="@id/sem"
        ></Button>
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/chest"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ramka"
        android:text="9"
        android:textSize="50dp"
        android:id="@+id/devat"
        android:layout_toRightOf="@id/vosem"
        ></Button>
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/sem"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ramka"
        android:text="C"
        android:textSize="50dp"
        android:id="@+id/C"

        ></Button>
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/vosem"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ramka"
        android:text="0"
        android:textSize="50dp"
        android:id="@+id/zero"
        android:layout_toRightOf="@id/C"
        ></Button>
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/devat"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ramka"
        android:text="="
        android:textSize="50dp"
        android:id="@+id/ravno"
        android:layout_toRightOf="@id/zero"
        ></Button>
    <Button
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_below="@+id/zero"
        android:layout_marginTop="15dp"
        android:layout_centerInParent="true"
        android:background="@drawable/ramka"
        android:text="Перейти к переводу"
        android:textSize="20dp"
        android:id="@+id/perexod"
        ></Button>


</RelativeLayout>